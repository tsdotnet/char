{
  "name": "@tsdotnet/char",
  "version": "1.2.1",
  "description": "A set of functions for testing character codes.",
  "author": "electricessence",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/types/char.d.ts",
      "import": "./dist/esm/char.js",
      "require": "./dist/cjs/char.js"
    }
  },
  "types": "./dist/types/char.d.ts",
  "keywords": [
    "character",
    "code",
    "character code",
    "character codes",
    "isWhiteSpace",
    "isLetter",
    "isLetterOrDigit",
    "isDigit"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "build:types": "cpy \"src/**/*.d.ts\" dist/types --parents && tsc -p tsconfig.types.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build": "pnpm clean && pnpm build:types && pnpm build:esm && pnpm build:cjs",
    "test": "vitest run",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "docs": "rimraf docs && typedoc --options typedoc.json --readme none",
    "bump": "pnpm run precommit && pnpm version patch",
    "precommit": "pnpm build && pnpm test && pnpm lint && git status -s",
    "preversion": "pnpm lint && pnpm test",
    "postversion": "git push && git push --tags && pnpm run docs && git add -A && git commit -m \"Updated docs.\" docs && git push",
    "prepublishOnly": "pnpm build && pnpm test && pnpm lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tsdotnet/char.git"
  },
  "bugs": {
    "url": "https://github.com/tsdotnet/char/issues"
  },
  "homepage": "https://github.com/tsdotnet/char#readme",
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/chai": "^5.2.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.3.0",
    "chai": "^5.2.1",
    "concurrently": "^9.2.0",
    "cpy-cli": "^6.0.0",
    "eslint": "^9.33.0",
    "mocha": "^11.7.1",
    "rimraf": "^6.0.1",
    "tsx": "^4.20.4",
    "typedoc": "^0.28.10",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.1",
    "vitest": "^3.2.4"
  },
  "pnpm": {
    "overrides": {
      "hosted-git-info@<2.8.9": ">=2.8.9",
      "y18n@=4.0.0": ">=4.0.1",
      "lodash@<4.17.20": ">=4.17.20",
      "shell-quote@<=1.7.2": ">=1.7.3",
      "lodash@<4.17.21": ">=4.17.21",
      "json5@<1.0.2": ">=1.0.2",
      "json5@>=2.0.0 <2.2.2": ">=2.2.2",
      "minimatch@<3.0.5": ">=3.0.5",
      "semver@<5.7.2": ">=5.7.2",
      "semver@>=6.0.0 <6.3.1": ">=6.3.1",
      "semver@>=7.0.0 <7.5.2": ">=7.5.2",
      "get-func-name@<2.0.1": ">=2.0.1",
      "@babel/traverse@<7.23.2": ">=7.23.2",
      "braces@<3.0.3": ">=3.0.3"
    }
  },
  "dependencies": {
    "tslib": "^2.8.1"
  }
}
